{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "Record your screen",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "version": "1.0.0",
    "action": { "default_popup": "index.html" },

    "permissions": ["scripting", "tabs", "activeTab"],
    "host_permissions": ["http://*/*", "https://*/*"]
}
